{
  "manifest_version": 3,
  "name": "Mul.Live Plus",
  "short_name": "Mul.Live",
  "version": "2.0.1",
  "description": "현재 보고 있는 방송을 Mul.Live에서 함께 봅니다.",
  "minimum_chrome_version": "119",
  "browser_specific_settings": {
    "gecko": {
      "id": "ext@mul.live"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://mul.live/",
  "permissions": [
    "activeTab",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "*://*.naver.com/*",
    "*://*.afreecatv.com/*",
    "*://*.sooplive.co.kr/*",
    "*://*.mul.live/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "web/*"
      ],
      "matches": [
        "*://*.chzzk.naver.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [
        "hide.css"
      ],
      "matches": [
        "*://*.mul.live/*"
      ]
    },
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.chzzk.naver.com/*"
      ],
      "exclude_globs": [
        "*://api.chzzk.naver.com/*"
      ]
    }
  ]
}
